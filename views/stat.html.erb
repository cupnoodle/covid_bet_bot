<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>Covid stat</title>
  <meta name="description" content="wisdow of mean and median">
  <style>
  </style>
  
</head>

<body>
  <h1>Prediction Stats</h1>
  <br>
  <canvas id="myChart" width="400" height="120" aria-label="Chart" role="img"></canvas>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
  <script>
  var ctx = document.getElementById('myChart');
  var myChart = new Chart(ctx, {
      type: 'line',
      data: {
          labels: <%= @dates.to_json %>,
          datasets: [{
              label: 'Correct answer',
              data: <%= @answers.to_json %>,
              fill: false,
              borderColor: [
                'rgba(255, 99, 132, 1)'
              ],
              borderWidth: 4,
              lineTension: 0
            },
            {
              label: 'Mean',
              data: <%= @means.to_json %>,
              fill: false,
              borderColor: [
                'rgba(116, 165, 205, 0.33)'
              ],
              borderWidth: 4,
              lineTension: 0
            },
            {
              label: 'Median',
              data: <%= @medians.to_json %>,
              fill: false,
              borderColor: [
                'rgba(136, 205, 116, 0.33)'
              ],
              borderWidth: 4,
              lineTension: 0
            },
          ]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero: false
                  }
              }]
          }
      }
  });
  </script>
</body>
</html>